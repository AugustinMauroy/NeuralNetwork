{
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single"],
		"indent": ["error", "tab"],
		"eol-last": ["error", "always"],
		"no-trailing-spaces": ["error", { "skipBlankLines": true }],
		"no-unused-vars": ["error", { "args": "none" }],
		"no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
		"no-var": "error",
		"prefer-const": "error",
		"no-const-assign": "error"
	},
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	}
}